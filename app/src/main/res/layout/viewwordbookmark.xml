<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/removebookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove from bookmarks"/>

    <TextView
        android:id="@+id/wordzhcharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="78dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/wordpinyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/wordpartofspeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/wordenglishdefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="50dp"/>

    <TextView
        android:id="@+id/wordsourcetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="50dp" />


</LinearLayout>